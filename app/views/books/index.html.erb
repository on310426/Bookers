<h1>Books</h1>
<table border="0">
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td class="link"><%= link_to 'Show', book_path(book) %></td>
            <td class="link"><%= link_to 'Edit', edit_book_path(book) %></td>
            <td class="link"><%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<h2>New Books</h2>

<% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <%= @book.errors.full_messages.each do |message| %>
        <ul>
            <li><%= message %></li>
        </ul>
    <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>

    <label>Title</label>
    <br>
    <%= f.text_field :title %>
    <br>
    <label>Body</label>
    <br>
    <%= f.text_area :body %>
    
    <br>
    
    <%= f.submit 'Create Book' %>
    
<% end %>